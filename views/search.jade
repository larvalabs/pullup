extends layout

block content
    if !user
        .alert.alert-info
            i.fa.fa-cloud-upload
            strong Join this site via pull request!
            |  Make the site better and become a full member. See <a href="/about">here</a> for more details.

    .page-header
        h4
          if filteredUser
            | News shared by 
            a(href='http://github.com/' + filteredUser, target='_blank') #{filteredUser}
          else
            | Recent News

        h5
          | Search
          form(name="search", action="/news/search", method="post")
            input(type="text", name="query")
            input(type="submit", value="Search")
        h6 
          | Search for
          = ' \'' + searchQuery
          = '\' has found ' + searchCount
          = ' results' 
    table.table.table-condensed
        thead
            tr
                th #
                th Title

                if !filteredUser
                    th User
        tbody.news-table
            each item, index in items
                tr
                    td= index + 1
                    td
                        a(href=item.url, target='_blank')
                            | #{item.title}
                    if !filteredUser
                        td
                            a(href='/news/' + item.poster.username) 
                                | #{item.poster.username}
