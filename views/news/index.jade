extends ../layout

block content
    if !user
        .alert.alert-info
            i.fa.fa-cloud-upload
            strong Join this site via pull request!
            |  Make the site better and become a full member. See <a href="/about">here</a> for more details.

    .page-header
        h4
          if filteredUser
            | News shared by 
            a(href='http://github.com/' + filteredUser, target='_blank') #{filteredUser}
          else
            | Recent News

    table.table.table-condensed
        thead
            tr
                th #
                th
                th Votes
                th Title
                th Date

                if !filteredUser
                    th User
        tbody.news-table
            each item, index in items
                tr
                    td= index + 1
                    td
                        if !item.votedFor
                            form(action='/news/' + item._id, method='POST')
                                input(type='hidden', name='amount', value='1')
                                button(type='submit', class='upvote')
                                    i.fa.fa-chevron-up

                    td
                        span.badge= item.votes
                    td
                        a(href=item.url, target='_blank')
                            | #{item.title}
                    td
                        item.created
                    if !filteredUser
                        td
                            a(href='/news/' + item.poster.username) 
                                | #{item.poster.username}
