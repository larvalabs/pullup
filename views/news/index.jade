extends ../layout

block content
    if !user
        .alert.alert-info.alert-dismissable
            button.close(type='button', data-dismiss='alert', aria-hidden='true') Ã—
            i.fa.fa-cloud-upload
            strong Join this site via pull request!
            |  Make the site better and become a full member. See <a href="/about">here</a> for more details.

    if !filteredUser
        .page-header
            h4
              if filteredSource
                | News from #{filteredSource}
              else
                | Recent News
    else
        .row.user-profile
            .col-md-6
                if userProfile
                    h1
                        if userProfile.picture
                            img(src='#{userProfile.picture}')
                        if userProfile.name
                            | #{userProfile.name}
            .col-md-6
                dl.pull-right
                    dt GitHub:
                    dd
                        a(href='http://github.com/#{filteredUser}', target='_blank') http://github.com/#{filteredUser}
                    br
                    if userProfile.location
                        dt Location:
                        dd= userProfile.location
                        br
                    if userProfile.website
                        dt Website:
                        dd
                            a(href='#{userProfile.website}', target='_blank') #{userProfile.website}
        .page-header
            h4 News Submitted

    table.table.table-condensed
        thead
            tr
                th #
                th
                th Votes
                th
                th Title
                th Comments
                if !filteredSource
                    th Source
                if !filteredUser
                    th User
        tbody.news-table
            each item, index in items
                tr
                    td= index + 1
                    td
                        if !item.votedFor
                            form(action='/news/' + item._id, method='POST')
                                input(type='hidden', name='amount', value='1')
                                button(type='submit', class='upvote')
                                    i.fa.fa-chevron-up

                    td
                        span.badge= item.votes
                    td.timeago(title="#{item.created}")= timeago(item.created)
                    td
                        a(href=item.url)
                            | #{item.title}
                        if item.summary
                            | &nbsp;
                            a(href="#", class="show-summary")
                                | ...
                        br
                        p(class='hidden summary')
                            em= item.summary
                    td
                        a(href='/news/' + item._id)
                            | #{item.comment_count}
                    if !filteredSource
                        td
                            a(href='/news/source/' + item.source)
                                | #{item.source}
                    if !filteredUser
                        td
                            a(href='/news/user/' + item.poster.username)
                                | #{item.poster.username}
